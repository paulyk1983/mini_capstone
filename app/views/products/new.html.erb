<h1>Add a New Product</h1>

<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this taco from being saved:</h2>
 
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_tag '/products' do %>
  <div>
    <%= label_tag :title %>
    <%= text_field_tag :title, @product.title %>
  </div>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price %>
  </div>
  <div>
    <%= label_tag :image %>
    <%= text_field_tag :image_src, @image %>
  </div>
  <div>
    <%= label_tag :supplier %>
    <%= collection_select :supplier, :supplier_id, @suppliers, :id, :name %>
  </div>
  <div>
    <%= submit_tag "Add Product" %>
  </div>
<% end %>