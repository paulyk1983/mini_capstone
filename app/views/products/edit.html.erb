<h1>Edit Product</h1>
<div class='well'>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this taco from being saved:</h2>
   
      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_tag "/products/#{@product.id}", method: :patch do %>
    <div class='form-group'>
      <%= label_tag :title %>
      <%= text_field_tag :title, @product.title, class: "form-control" %>
    </div> 
    <div class='form-group'>
      <%= label_tag :name %>
      <%= text_field_tag :name, @product.name, class: "form-control" %>
    </div>  
    <div class='form-group'>
      <%= label_tag :price %>
      <%= text_field_tag :price, @product.price, class: "form-control" %>
    </div> 
    <div class='form-group'>
      <%= label_tag :description %>
      <%= text_field_tag :description, @product.description, class: "form-control" %>
    </div> 
    <div class='form-group'>
      <%= label_tag :image %>
      <%= text_field_tag :images, @product.images.first.src, class: "form-control" %>
    </div> 
    <div class='form-group'>
      <%= submit_tag 'Submit Edit' %>
    </div>
  <% end %>
</div>