<div class='well product'>
  <div class='row'>
    <div class='col-xs-12 col-sm-4 col-md-3'>
      <h3><%= @product.sale_message %></h3>
      <% @product.images.each do |image| %>
        <img class='img-responsive' src='<%= image.src %>'>
      <% end %>
      <p>Updated on: <%= @product.friendly_updated_at %></p>
    </div>
    <div class='col-xs-12 col-sm-8 col-md-9'>
      <h2><%= @product.name %></h2>
      <p><strong>Vendor:</strong> <%= @product.supplier.name %></p>
      <p><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>
      <p><strong>Tax:</strong> <%= number_to_currency(@product.tax) %></p>
      <p><strong>Total:</strong> <%= number_to_currency(@product.total) %></p>
      <p><strong>Description:</strong> <%= @product.description %></p>
      <p><strong>Categories:</strong> <%= @product.printable_category_names %></p>  
    </div>
  </div>
</div>
<div class='well product'>
  <div class='row'>
    <%= form_tag '/orders' do %>
      <div>
        <%= label_tag :quantity %>
        <%= text_field_tag :quantity %>
      </div>
      <div>
        <%= hidden_field_tag :product_id, @product.id %>
      </div>
        
      <div>
        <button class="btn btn-success" type="submit">Buy Now</button>
      </div>
    <% end %>
  </div>
</div>
<div class='well product'>
  <div class='row'>
    <div class='col-xs-12'>
      <div style='padding:20px; display:inline'>
        <!-- <#%= link_to "Edit this product", "/products/#{@product.id}/edit" %> -->
        <a class='btn btn-larg btn-warning' href='/products/<%= @product.id %>/edit'>Edit</a>
      </div>
      <div style='padding:20px; display:inline'>
        <!-- <#%= link_to "Delete this product", "/products/#{@product.id}", method: :delete %> -->
        <a class="btn btn-large btn-danger" rel="nofollow" data-method="delete" href="/products/<%= @product.id %>">Delete</a>
      </div>
      <div style='padding:20px; display:inline'>
        <a class='btn btn-large btn-info' href='/products'>Back to Index</a>
      </div>
    </div>
  </div>
</div>